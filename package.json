{
  "name": "mago-react",
  "version": "1.0.0",
  "description": "A lightweight, strictly-typed state management library for React.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "clean": "rimraf dist",
    "prebuild": "rimraf --glob dist \"src/**/*.js\" \"src/**/*.d.ts\" \"src/**/*.map\"",
    "build": "npm run clean && tsc",
    "test": "vitest run",
    "lint": "eslint src --ext .ts,.tsx",
    "release:patch": "npm run build && npm version patch && npm publish",
    "release:minor": "npm run build && npm version minor && npm publish",
    "release:major": "npm run build && npm version major && npm publish"
  },
  "keywords": [
    "react",
    "state",
    "management",
    "typescript",
    "strict"
  ],
  "author": "Nguyen Huy Long",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  }
}