{
  "name": "magos",
  "version": "1.0.0",
  "description": "Strictly-typed state management for React and Vanilla JS.",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./vanilla": {
      "types": "./dist/vanilla/index.d.ts",
      "import": "./dist/vanilla/index.js",
      "require": "./dist/vanilla/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsup src/index.ts src/react/index.ts src/vanilla/index.ts --format esm,cjs --dts --clean --external react",
    "test": "vitest run",
    "release:patch": "npm run build && npm version patch && npm publish"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.0.0",
    "rimraf": "^6.1.2",
    "vitest": "^3.0.0",
    "react": "^18.3.1",
    "@types/react": "^18.3.12"
  }
}