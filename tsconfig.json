{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src",
    
    /* Declaration */
    "declaration": true,
    "declarationMap": true, 
    
    /* Interop & Check */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Cực kỳ quan trọng cho Library */
    "moduleDetection": "force",
    "isolatedModules": true, // Đảm bảo tsup/esbuild build từng file an toàn
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.test.tsx", 
    "src/**/*.test.ts"
  ]
}