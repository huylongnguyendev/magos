{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",          // Bắt buộc để nhận diện @testing-library/react
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,         // Tạo file .d.ts cho người dùng
    "esModuleInterop": true,
    "skipLibCheck": true,        // Bỏ qua kiểm tra lỗi trong node_modules (Rất quan trọng)
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"] // Đừng cho file test vào bản build
}